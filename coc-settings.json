{
	"codeLens.enable": true,

	//"diagnostic.errorSign": "üíô",
	//"diagnostic.warningSign": "‚ö†Ô∏è",
	//"diagnostic.infoSign": "‚ÑπÔ∏è",
	//"diagnostic.hintSign": "üí°",

	"diagnostic.errorSign": "‚ùó",
	"diagnostic.warningSign": "‚ö†Ô∏è",
	"diagnostic.infoSign": "‚ÑπÔ∏è",
	"diagnostic.hintSign": "üí°",

    "diagnostic.enableMessage": "jump",
    "suggest.enableFloat": true,
	"clangd": {
		"fallbackFlags": [
			"-std=c++20"
		],
		"checkUpdates": true,
		"arguments": [
			"--clang-tidy",
			"--completion-style=detailed",
			"--header-insertion-decorators",
			"--enable-config",
			"-j=12",
			"--log=verbose",
			"--pretty"
		]
	},
	"languageserver": {
		"solidity": {
			"command": "~/work/solidity/build/solc/solc",
			"args": [
				"--lsp"
			],
			"settings": { // Solidity Standard-JSON's input settings.
				"remappings": [],
				"evmVersion": "berlin",
                "file-load-strategy": "directly-opened-and-on-import"
			},
			"trace.server": "verbose",
			"rootPatterns": [
				"compile_commands.json",
				".git/"
			],
			"filetypes": [
				"solidity"
			]
		}
	}
}

